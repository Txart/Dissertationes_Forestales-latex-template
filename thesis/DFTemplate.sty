\ProvidesPackage{DFTemplate}

\usepackage[utf8]{inputenc}
\usepackage{geometry}
\usepackage{mathptmx} % for Times fonts, also in maths
\geometry{
top=25mm,
bottom=20mm,
inner=26mm,
outer=20mm,
headsep=8mm,
footskip=10mm,
}
\usepackage[]{fancyhdr} % for headers and footers
    \pagestyle{fancy} % Set normal pages' headers and footers
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \fancyhead[RO, LE]{\thepage}

    \fancypagestyle{plain}{ % to override chapter and toc pages
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \fancyhead[RO, LE]{\thepage}}

\usepackage{setspace}
    \setstretch{1} % This gives 12.0 pt line spacing. To test it, write \the\baselineskip in the .tex file

\setlength{\parindent}{5mm} % Paragraph first line indentation

\usepackage{titlesec}
    \titleformat{\section}{\large\bfseries}{\thesection}{2.5ex}{}
    \titlespacing*{\section}{0pc}{2pc}{2pc}
    \titleformat{\subsection}{\bfseries}{\thesubsection}{2.5ex}{}
    \titlespacing*{\subsection}{0pc}{2pc}{1pc}
    \titleformat{\subsubsection}{\itshape}{\thesubsubsection}{2.5ex}{}
    \titlespacing*{\subsubsection}{0pc}{1pc}{1pc}

\usepackage[titles]{tocloft} % Table of contents font editing
    % Change name to Table of contents
    \renewcommand{\contentsname}{TABLE OF CONTENTS}
    % Same fonts as in text
    \renewcommand{\cftsecfont}{\large\bfseries}
    \renewcommand{\cftsubsecfont}{\bfseries}
    \renewcommand{\cftsubsubsecfont}{\itshape}
    % Exact indentations of ToC elements
    \setlength{\cftsecindent}{0mm}
    \setlength{\cftsubsecindent}{5mm}
    \setlength{\cftsubsubsecindent}{10mm}
    % Change font of numbers
    \renewcommand{\cftsecpagefont}{\normalsize}
    % Add dots to all levels
    \renewcommand{\cftsecdotsep}{\cftdotsep}
    % Change styling of dots
    \renewcommand{\cftsecleader}{\cftdotfill{\cftsecdotsep}}

    % Change bibliography name
    \renewcommand{\refname}{REFERENCES}

% Attempt to format the bibliography style according to the guidelines
\usepackage[
    backend=biber,
    style=authoryear,
    bibstyle=authoryear,
    natbib=true,
    maxbibnames=99,
    giveninits=true,
    uniquename=init,
    date=year,
    isbn=false,
    url=false,
    hyperref=auto,
    backref=true % Back references to the text are a beautiful creature. But if you want to remove them, set this to false.
    ]{biblatex}
\setlength\bibitemsep{2.0\itemsep} % Insert 1 line of vertical space between any 2 references.
\DeclareFieldFormat*{title}{#1}
\renewbibmacro{in:}{}
\AtEveryBibitem{\clearlist{language}}
\setlength{\bibhang}{0pt}
